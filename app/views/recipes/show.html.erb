<body class="recipe_show">
  <h1><%= @recipe.title %></h1>

  <p>
    <%= @recipe.description %>
  </p>

  <h4>Ingredients</h4>
  <%= link_to 'Add Ingredient', new_recipe_ingredient_path %>
  <ul>
    <% @recipe.ingredients.each do |ingredient| %>
    <li> ingredient.count ingredient.name <%= link_to 'Delete', recipe_ingredient_path, method: :delete, data: { confirm: "Are you sure?"} %> <%= link_to 'Edit', edit_recipe_ingredient_path %></li>
    <% end %>
  </ul>

  <h4>Steps</h4>
  <%= link_to 'Add Step', new_recipe_step_path %>
  <ol>
    <% @recipe.steps.each do |step| %>
    <li> step.description <%= link_to 'Delete', recipe_step_path, method: :delete, data: { confirm: "Are you sure?"} %> <%= link_to 'Edit', edit_recipe_step_path %></li>
    <% end %>
  </ol>

  <%= link_to 'Recipes', recipes_path %>
  <%= link_to 'Delete', @recipe, method: :delete, data: { confirm: "Are you sure?"} %>
</body>
